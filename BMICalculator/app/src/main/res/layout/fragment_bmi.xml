<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bmi.BmiFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="59dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/switchSex"
                android:layout_width="152dp"
                android:layout_height="43dp"
                android:text="@string/hint_switch_sex"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewSex"
                android:layout_width="242dp"
                android:layout_height="32dp"
                android:text="@string/hint_txt_view_sex"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewAge"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hint_txt_view_age"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/personAge"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:backgroundTint="#4F5254"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="@string/hint_age"
                android:inputType="number"
                android:textSize="24sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewWeight"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hint_txt_view_weight"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/personWeight"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:backgroundTint="#4F5254"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="@string/hint_weight"
                android:inputType="number"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewHeight"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="@string/hint_txt_view_height"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/personHeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="@string/hint_height"
                android:inputType="number"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFood"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/img_food__content_description"
                android:src="@drawable/food_4"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="223dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewBMI"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:textSize="18sp"
                    tools:visibility="invisible" />

                <TextView
                    android:id="@+id/text_bmr"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/buttonCheck"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:gravity="center|top"
            android:text="@string/hint_check_button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>